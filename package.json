{
  "name": "kira",
  "version": "1.0.0",
  "description": "A production-ready immersive interactive novel engine optimized for Cloudflare Pages.",
  "type": "module",
  "scripts": {
    "prebuild": "mkdir -p public/novels && cp -r novels/* public/novels/ && cp novels_list.json public/",
    "dev": "vite",
    "build": "npm run validate && vite build",
    "validate": "node tools/validate-novels.js",
    "preview": "vite preview",
    "images:download": "node tools/download-images.js download",
    "images:generate": "node tools/download-images.js generate",
    "test": "node test/index.js"
  },
  "keywords": [
    "interactive-fiction",
    "alpinejs",
    "tailwindcss",
    "cloudflare-pages"
  ],
  "author": "Trae",
  "license": "MIT",
  "dependencies": {
    "alpinejs": "^3.13.3",
    "lucide": "^0.303.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.10"
  }
}

